<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pane"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.yarikx.reactiveandroid.util.ReactiveTextViewHelper
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <org.yarikx.reactiveandroid.util.ReactiveSeekbarHelper
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <org.yarikx.reactiveandroid.util.ReactiveSeekbarHelper
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <org.yarikx.reactiveandroid.util.ReactiveButtonHelper
        android:id="@+id/rbutton"
        android:text="hack you, java"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <org.yarikx.reactiveandroid.util.ReactiveEditTextHelper
        android:id="@+id/redit"
        android:text="hack you, sublime"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
